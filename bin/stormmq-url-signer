$:.unshift File.dirname(__FILE__) + '/../lib'

begin
  require 'commandline/optionparser'
rescue LoadError
  require 'rubygems'
  retry
end

require 'stormmq'

class StormMQ::Application::URLSigner < StormMQ::Application

  def initialize
    synopsis  "--user USER [--method METHOD] --url URL"
    short_description "Signs a URL for use with StormMQ's RESTful API"
    long_description  ""
    options :help
    option_user

    option  :names           => %w(--method -m),
            :opt_description => "the HTTP method to use - defaults to 'GET'",
            :arity           => [0,1],
            :opt_found       => get_args,
            :opt_not_found   => 'GET'

    option  :names           => %w(--url -a),
            :opt_description => "the URL to be signed",
            :arity           => [1,1],
            :opt_found       => get_args,
            :opt_not_found   => CommandLine::OptionParser::OPT_NOT_FOUND_BUT_REQUIRED
  end

  def main
    puts self.url.canonicalise_and_sign(opt.user, self.secret_key, opt['--method'])
  end

  def url
    StormMQ::URL.new(opt.url)
  end

end

StormMQ::Application::URLSigner.run
